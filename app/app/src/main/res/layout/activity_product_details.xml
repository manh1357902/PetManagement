<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.shop.ProductDetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_marginStart="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/baseline_arrow_back_ios_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:text="Chi tiết sản phẩm"
            />
        <ImageView
            android:id="@+id/btn_cart"
            android:layout_marginEnd="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:ignore="ContentDescription"
            android:layout_gravity="end"
            android:src="@drawable/baseline_shopping_cart_24"
            />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/line"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
    <ImageView
        android:id="@+id/image_product"
        android:layout_marginHorizontal="60dp"
        android:scaleType="fitXY"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:ignore="ContentDescription" />
    <ScrollView
        android:layout_marginTop="-10dp"
        android:layout_below="@id/image_product"
        android:layout_width="match_parent"
        android:background="@drawable/bg_product_detail"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <RelativeLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá tiền: "
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/price"
                    android:layout_toEndOf="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="25sp"
                    tools:ignore="RelativeOverlap" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/btn_sub"
                        android:background="@drawable/bg_btn_add_sub"
                        android:layout_width="19dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_remove_24"
                        />
                    <TextView
                        android:id="@+id/quantity"
                        android:gravity="center"
                        android:background="@drawable/bg_btn_add_sub"
                        android:layout_width="22dp"
                        android:text="1"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_height="24dp"/>
                    <ImageView
                        android:id="@+id/btn_add"
                        android:background="@drawable/bg_btn_add_sub"
                        android:layout_width="19dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_add_24"
                        />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:text="Mô tả sản phẩm"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/product_detail"
                android:layout_marginBottom="60dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_background_button"
        android:layout_marginHorizontal="40dp"
        android:text="Thêm vào giỏ hàng"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
</RelativeLayout>