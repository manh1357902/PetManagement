<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/bg_item_cart"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:layout_height="140dp">
    <CheckBox
        android:layout_centerVertical="true"
        android:id="@+id/select_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_toEndOf="@+id/select_check_box"
        android:id="@+id/image_cart_item"
        android:layout_width="80dp"
        android:src="@drawable/thucan1"
        android:layout_height="120dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_toEndOf="@+id/image_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_cart_item"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="16sp"
            android:ellipsize="end"
            android:text="Thức ăn cho chó con cỡ nhỏ ROYAL CANIN Mini Puppy"
            />
        <TextView
            android:id="@+id/price_cart_item"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="215.000đ"
            android:textColor="@color/red"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_sub"
                android:background="@drawable/bg_btn_add_sub"
                android:layout_width="19dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_remove_24"
                />
            <TextView
                android:id="@+id/quantity"
                android:gravity="center"
                android:background="@drawable/bg_btn_add_sub"
                android:layout_width="22dp"
                android:text="1"
                android:inputType="number"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_height="18dp"/>
            <ImageView
                android:id="@+id/btn_add"
                android:background="@drawable/bg_btn_add_sub"
                android:layout_width="19dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_add_24"
                />
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="30dp"
        android:background="@color/red"
        app:cardCornerRadius="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp">
        <ImageButton
            android:id="@+id/btn_delete"
            android:background="@color/red"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_delete_24"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>
